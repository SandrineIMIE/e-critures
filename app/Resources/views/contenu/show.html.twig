{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contenu</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contenu.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ contenu.contenu }}</td>
            </tr>
            <tr>
                <th>Versionat</th>
                <td>{% if contenu.versionat %}{{ contenu.versionat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contenu_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('contenu_edit', { 'id': contenu.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
