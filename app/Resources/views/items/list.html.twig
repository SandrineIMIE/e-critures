{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Objets</h1>

    <table>
        <thead>
        <tr>

            <th>Nom de l'objet</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.description }}</td>
                <td>
                    <a href="{{ path('items_show', { 'id': item.id }) }}" class="btn-primary" title="Voir" role="button">
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <a href="{{ path('items_edit', { 'id': item.id }) }}"title="Modifier" class="btn-info" role="button">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ path('items_delete', { 'id': item.id }) }}" class="btn btn-danger" role="button" title="Supprimer">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
