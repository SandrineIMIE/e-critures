{% extends 'popup.html.twig' %}

{% block body %}
    <h1>Objet</h1>
    <table>
        <tbody>

        <tr>
            <th>Nom</th>
            <td>{{ item.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ item.description }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="/images/ecriture/{{item.imageName }}" class="img-thumbnail"  width="140px" height="140px"></td>
        </tr>
        <tr>
            <th>Actions</th>
            <td>
                <a href="{{ path('items_edit', { 'id': item.id }) }}" class="btn btn-info" role="button"
                   title="Modifier">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="{{ path('items_delete', { 'id': item.id }) }}" class="btn btn-danger" role="button"
                   title="Supprimer">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
            </td>
        </tr>
        </tbody>
    </table>

{% endblock %}