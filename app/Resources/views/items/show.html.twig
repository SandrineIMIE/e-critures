{% extends 'base.html.twig' %}

{% block body %}
    <h1>Objet/h1>
    <table>
        <tbody>

        <tr>
            <th>Nom</th>
            <td>{{ item.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ item.description }}</td>
        </tr>
        <tr>
            <th>Actions</th>
            <td><a href="{{ path('items_edit', { 'id': item.id }) }}" class="btn btn-info"
                   role="button" title="Modifier"> <span class="glyphicon glyphicon-pencil"
                                                         aria-hidden="true"></span></a>
                {{ form_start(delete_form) }}
                <button type="submit" value="Supprimer" class="btn btn-danger" title="Supprimer">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
                {{ form_end(delete_form) }}
            </td>
        </tr>
        </tbody>
    </table>



{% endblock %}