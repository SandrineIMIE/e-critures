{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Liens</h1>

    <table>
        <thead>
        <tr>
            <th>Adresse</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <td><a href="{{ link.adress }}" target="_blank" title="{{ link.name }}"> {{ link.name }}</a></td>
                <td>
                    <a href="{{ path('link_show', { 'id': link.id }) }}" class="btn-primary" title="Voir" role="button">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <a href="{{ path('link_edit', { 'id': link.id }) }}"title="Modifier" class="btn-info" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{  path('link_delete', { 'id': link.id }) }}" class="btn btn-danger" role="button" title="Supprimer">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
