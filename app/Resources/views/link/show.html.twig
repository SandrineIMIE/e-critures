{% extends 'popup.html.twig' %}

{% block body %}
    <h1>Lien</h1>
    <table>
        <tbody>
            <tr>
                <th>Adresse</th>
                <td><a href="{{ link.adress }}"> {{ link.adress }}</a> </td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ link.name }}</td>
            </tr>
        <tr>
            <th>Actions</th>
            <td><a href="{{ path('link_edit', { 'id': link.id }) }}" class="btn btn-info"
