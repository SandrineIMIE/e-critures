{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Personnage d'un project</h1>
    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Surnom</th>
            <th>Date de naissance</th>
            <th>Lieu de naissance</th>
            <th>Sexe</th>
            <th>Statut</th>
            <th>Mineur</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for perso in persos %}
            <tr>
                <td><a href="{{ path('perso_show', { 'id': perso.id }) }}">{{ perso.id }}</a></td>
                <td>{{ perso.nom }}</td>
                <td>{{ perso.prenom }}</td>
                <td>{{ perso.surnom }}</td>
                <td>{{ perso.daten }}</td>
                <td>{{ perso.lieun }}</td>
                <td>{{ perso.sexe }}</td>
                <td>{{ perso.statut }}</td>
                <td>{% if perso.mineur %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a href="{{ path('perso_show', { 'id': perso.id }) }}" class="btn-primary" title="Voir"
                       role="button">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <a href="{{ path('perso_edit', { 'id': perso.id }) }}" title="Modifier" class="btn-info"
                       role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ path('perso_delete', { 'id': perso.id }) }}" class="btn btn-danger" title="Supprimer"
                    role="button">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    <span class="hidden">Supprimer</span></a>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<ul>#}
    {#<li>#}
    {#<a href="{{ path('perso_new') }}">Create a new perso</a>#}
    {#</li>#}
    {#</ul>#}
{% endblock %}
