{% extends 'base.html.twig' %}

{% block body %}
    <h1>Perso</h1>

    <table>
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ perso.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ perso.prenom }}</td>
        </tr>
        <tr>
            <th>Surnom</th>
            <td>{{ perso.surnom }}</td>
        </tr>
        <tr>
            <th>Date de naissance</th>
            <td>{{ perso.daten }}</td>
        </tr>
        <tr>
            <th>Lieu de naissance</th>
            <td>{{ perso.lieun }}</td>
        </tr>
        <tr>
            <th>Sexe</th>
            <td>{{ perso.sexe }}</td>
        </tr>
        <tr>
            <th>Statut</th>
            <td>{{ perso.statut }}</td>
        </tr>
        <tr>
            <th>Mineur</th>
            <td>{% if perso.mineur %}Oui{% else %}Non{% endif %}</td>
        </tr>
        <tr>
            <img src="/images/ecriture/{{ perso.imageName }}">
        </tr>
        <tr>
            <th>Actions</th>
            <td><a href="{{ path('perso_edit', { 'id': perso.id }) }}" class="btn btn-info"
                   role="button" title="Modifier">
                    <span class="glyphicon glyphicon-pencil"  aria-hidden="true"></span>
                </a> {{ form_start(delete_form) }}
                <button type="submit" value="Supprimer" class="btn btn-danger" title="Supprimer">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
                {{ form_end(delete_form) }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
