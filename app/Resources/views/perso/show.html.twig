{% extends 'popup.html.twig' %}

{% block body %}
    <table>
        <tbody class="text-left">
        <tr>
            <th>Nom :</th>
            <td><span class="text-capitalize">{{ perso.nom }}</td>
        </tr>
        <tr>
            <th>Prénom :</th>
            <td>{{ perso.prenom }}</span></td>
        </tr>
        <tr>
            <th>Surnom :</th>
            <td>{{ perso.surnom }}</td>
        </tr>
        <tr>
            <td><b> Né le :</b>{{ perso.daten }} <b> à </b> {{ perso.lieun }}</td>
        </tr>
        <tr>
            <td ><b> Sexe :</b>{{ perso.sexe }} </td>
        </tr>
        <tr>
            <td><b> Statut :</b> {{ perso.statut }}</td>
        </tr>
        <tr>
            <th>Mineur</th>
            <td>{% if perso.mineur %}Oui{% else %}Non{% endif %}</td>
        </tr>
        <tr>
            <img src="/images/ecriture/{{ perso.imageName }}">
        </tr>
        <tr>
            <th>
                <hr>
                Actions : <a href="{{ path('perso_edit', { 'id': perso.id }) }}" class="btn btn-info"
                             role="button" title="Modifier">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a href="{{ path('perso_delete', { 'id': perso.id }) }}" class="btn btn-danger" title="Supprimer"
                   role="button"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
        </tr>
        </tbody>
    </table>

{% endblock %}
