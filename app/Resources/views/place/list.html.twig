{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Lieux</h1>

    <table>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Localisation</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.name }}</td>
                <td>{{ place.description }}</td>
                <td>{{ place.localisation }}</td>
                <td>
                    <a href="{{ path('place_show', { 'id': place.id }) }}" class="btn-primary" title="Voir" role="button">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <a href="{{ path('place_edit', { 'id': place.id }) }}" title="Modifier" class="btn-info"
                       role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ path('lexicom_delete', { 'id': place.id }) }}" class="btn btn-danger" title="Supprimer"
                       role="button">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
