{% extends 'popup.html.twig' %}

{% block body %}
    <h1>Lieux</h1>
    <table>
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ place.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ place.description }}</td>
        </tr>
        <tr>
            <th>Localisation</th>
            <td>{{ place.localisation }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="/images/ecriture/{{place.imageName }}" class="img-thumbnail"  width="140px" height="140px"></td>
        </tr>
        <tr>
            <th>Actions</th>
        <tr>
            <a href="{{ path('place_edit', { 'id': place.id }) }}" class="btn btn-info"
               role="button" title="Modifier"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            {{ form_start(delete_form) }}
            <a href="{{ path('place_delete', { 'id': place.id }) }}" class="btn btn-danger" title="Supprimer"
               role="button"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></tr>
        </tbody>
    </table>

{% endblock %}
