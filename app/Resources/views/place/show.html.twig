{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lieux</h1>

    <table>
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ place.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ place.description }}</td>
        </tr>
        <tr>
            <th>Localisation</th>
            <td>{{ place.localisation }}</td>
        </tr>
        <tr>
            <th>Actions</th>
        <tr>
            <a href="{{ path('place_edit', { 'id': place.id }) }}" class="btn btn-info"
               role="button" title="Modifier"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            {{ form_start(delete_form) }}
            <button type="submit" value="Supprimer" class="btn btn-danger" title="Supprimer">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
            {{ form_end(delete_form) }}</tr>
        </tbody>
    </table>

{% endblock %}
