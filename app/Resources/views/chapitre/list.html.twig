{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des chapitres </h1>

    <table>
        <thead>
            <tr>

                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chapitre in chapitres %}
            <tr>

                <td>
                    <a href="{{ path('contenu_edit', { 'id': chapitre.contenu.id }) }}">{{ chapitre.title }}</a>
                </td>
                <td>
                    <a href="{{ path('contenu_list', { 'id': chapitre.id }) }}" class="btn  btn-primary">Les versions</a>
&nbsp;
                    <a href="{{ path('chapitre_edit', { 'id': chapitre.id }) }}" class="btn btn-primary">Modifier</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
