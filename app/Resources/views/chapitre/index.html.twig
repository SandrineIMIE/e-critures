{% extends 'base.html.twig' %}
    {% block dahsbord%}
        {% include 'default/dashboard.project.html.twig' %}
    {% endblock %}
    {% block nav %}
        {% include 'default/nav.dashboard.html.twig' %}
    {% endblock %}
{% block body %}
    <h1>Liste des chapitres</h1>

    <table>
        <thead>
            <tr>

                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chapitre in chapitres %}
            <tr>

                <td>
                    <a href="{{ path('chapitre_edit', { 'id': chapitre.id }) }}">{{ chapitre.title }}</a>
                </td>
                <td>
                    <a href="{{ path('chapitre_edit', { 'id': chapitre.id }) }}" class="btn btn-primary">Modifier</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block menuprincipale %}
