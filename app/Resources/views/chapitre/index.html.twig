{% extends 'base.html.twig' %}

{% block body %}
    <h1>Chapitres list</h1>

    <table>
        <thead>
            <tr>

                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chapitre in chapitres %}
            <tr>

                <td>{{ chapitre.title }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('chapitre_show', { 'id': chapitre.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('chapitre_edit', { 'id': chapitre.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
