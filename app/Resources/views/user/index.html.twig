{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Password</th>
            <th>Salt</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.salt }}</td>
                <td>{% if user.roles %}{{ user.roles|join(', ') }}{% endif %}</td>
                <td>
                    <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn-info" title="Voir" role="button">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}" title="Modifier" class="btn-primary" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-info" role="button"
                       title=" Modifier">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Cr√©er un user</a>
        </li>
    </ul>
{% endblock %}
