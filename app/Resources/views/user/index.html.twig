{% extends 'admin.html.twig' %}
    {% block dahsbord%}

    {% endblock %}

{% block body %}
    <h1>Liste des Utilisateurs</h1>
    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom d'utilisateur</th>
            <th>Mot de passe</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-info" title="Voir" role="button">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}" title="Modifier" class="btn btn-primary"
                       role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ path('user_delete', { 'id': user.id }) }}" class="btn btn-danger" role="button"
                       title=" Supprimer">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
