<div class="clearfix"></div>
<ul id="menu-accordeon">
    <li><a href="{{ path('project_list', {'id':project.getUser.id }) }}" title="Retour à mes Projets">
            <span class="glyphicon glyphicon-book" aria-hidden="true"></span>&nbsp;Retour à mes Projets</a>
    </li>
    <li><a href="#"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>&nbsp; Chapitre(s)</a>
        <ul id="listchap">
            {% for chapitre in chapitres %}
                <li>
                    <a href="{{ path('chapitre_edit', { 'id': chapitre.id }) }}" title="{{ chapitre.title }}">{{ chapitre.title }}</a>
                </li>
            {% endfor %}
            <li>
                <a href="{{ path('chapitre_new',{ 'id': project.id }) }}" title="Ajouter un Chapitre">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </a>
            </li>
        </ul>
    </li>
    <li><a href="#" id="linkshow"><span class="glyphicon glyphicon-link" aria-hidden="true"> </span>&nbsp;Liens</a>
        <ul id="listliens">
            {% for link in links %}
                <li>
                    <a href="{{ link.adress }}" target="_blank" title="{{ link.name }}"> {{ link.name }}</a>
                </li>
            {% endfor %}
            <li>
                <a href="#" title="Ajouter un Lien" onclick="window.open('{{ path('link_new', { 'id': project.id }) }}',
                        'Popup_Window','width=600, height=400'); return false;">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true" ></span>
                </a>
            </li>
        </ul>
    </li>
    <li><a href="#"><span class="glyphicon glyphicon-pushpin" aria-hidden="true"> </span>&nbsp;Notes</a>
        <ul id="listnotes">
            {% for note in notes %}
                <li>
                    <a href="#"  title="{{ note.titre }}"
                       onclick="window.open('{{ path('note_show', { 'id': note.id }) }}',
                               'Popup_Window','width=600, height=400'); return false;" >
                        {{ note.titre }}
                    </a>
                </li>
            {% endfor %}
            <li>
                <a href="#" title="Ajouter une note" onclick="window.open('{{ path('note_new', { 'id': project.id }) }}',
                        'Popup_Window','width=600, height=400'); return false;" >
                    <span class="glyphicon glyphicon-plus" aria-hidden="true" ></span>
                </a>
            </li>
        </ul>
    </li>
    <li><a href="#"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>&nbsp;Objets</a>
        <ul id="listobjet">
            {% for item in items %}
                <li>
