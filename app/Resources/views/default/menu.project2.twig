                       onclick="window.open('{{ path('items_show', { 'id': item.id }) }}',
                               'Popup_Window','width=600, height=400'); return false;" >
                        {{ item.name }}
                    </a>
                </li>
            {% endfor %}
            <li>
                <a href="#" title="Ajouter un objet" onclick="window.open('{{ path('items_new', { 'id': project.id }) }}',
                        'Popup_Window','width=600, height=400'); return false;" >
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </a>
            </li>
        </ul>
    </li>
    <li><a href="#"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>&nbsp;Evenements</a>
        <ul id="listevents">
            {% for event in events %}
                <li>
                    <a href="#"  title="{{ event.date }}"
                       onclick="window.open('{{ path('events_show', { 'id': event.id }) }}',
                               'Popup_Window','width=600, height=400'); return false;" >
                        {{ event.date }}
                    </a>
                </li>
            {% endfor %}
            <li>
                <a href="#"  title="Ajouter un événement" onclick="window.open('{{ path('events_new', { 'id': project.id }) }}',
                        'Popup_Window','width=600, height=400'); return false;">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </a>
            </li>
        </ul>
    </li>
    <li><a href="#"><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> Lieux </a>
        <ul id="listlieux">
            {% for place in places %}
