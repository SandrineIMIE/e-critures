{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lexique</h1>

    <table>
        <thead>
        <tr>

            <th>Mot</th>
            <th>Definition</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for lexicom in lexicoms %}
            <tr>
                <td>{{ lexicom.mot }}</td>
                <td>{{ lexicom.definition }}</td>
                <td>
                    <a href="{{ path('lexicom_show', { 'id': lexicom.id }) }}" class="btn-primary" title="Voir"
                       role="button">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <a href="{{ path('lexicom_edit', { 'id': lexicom.id }) }}" title="Modifier" class="btn-info"
                       role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ path('lexicom_delete', { 'id': lexicom.id }) }}" class="btn btn-danger" role="button" title="Supprimer">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
