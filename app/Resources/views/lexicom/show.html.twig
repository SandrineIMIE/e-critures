{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lexicom</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lexicom.id }}</td>
            </tr>
            <tr>
                <th>Mot</th>
                <td>{{ lexicom.mot }}</td>
            </tr>
            <tr>
                <th>Definition</th>
                <td>{{ lexicom.definition }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lexicom_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lexicom_edit', { 'id': lexicom.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
