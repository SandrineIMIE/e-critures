{% extends 'base.html.twig' %}
{% block body %}
    <h1>Version</h1>
    <table>
        <tbody>
        <tr>
            <th>Contenu</th>
            <td>{{ version.contenu }}</td>
        </tr>
        <tr>
            <th>Version du</th>
            <td>{% if version.versionat %}{{ version.versionat|date('d-m-Y H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Vs</th>
            <td>{{ version.vs }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('version_index', { 'id': chapitre.id }) }}">retour</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
