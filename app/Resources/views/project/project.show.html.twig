{% extends 'base.html.twig' %}
    {% block dahsbord%}
        {% include 'default/dashboard.project.html.twig' %}
    {% endblock %}
    {% block nav %}
        {% include 'default/nav.dashboard.html.twig' %}
    {% endblock %}
{% block body %}
    <h2 class="sub-header">{{ project.title }}</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ project.getCategory.name }}</td>
            </tr>
            <tr>
                <th>Droits</th>
                <td>{{ project.getRights.type }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if project.statut %}Terminé{% else %} En cours{% endif %}</td>
            </tr>
            <tr>
                <th>Crée le </th>
                <td>{% if project.createdat %}{{ project.createdat|date('d/m/Y - H:i:') }}{% endif %}</td>
                <th>Modifié le </th>
                <td>{% if project.editedat %}{{ project.editedat|date('d/m/Y - H:i') }}{% endif %}</td>
            </tr>
            {% if project.tags|length >0 %}
            <tr>
                <th>Tags</th>
                <td>
                    {%  for tag in project.tags %}
                        <a href="{{ path('tag_show', { 'id': tag.id }) }}"> {{ tag.name }}</a>&nbsp;/&nbsp;
                    {% endfor %}</td>
            </tr>
            {% endif%}
            <tr>
                <th>Actions</th>
                <td></td>
            </tr>
            </tbody>
        </table>
        <div class="btn-group">
        <a href="{{ path('project_edit', { 'id': project.id }) }}" class="btn btn-info">Modifier</a>
        {{ form_start(delete_form) }}
        <input type="submit" value="Supprimer" class="btn btn-danger">
        {{ form_end(delete_form) }}</div>
    </div>
    <h2 class="sub-header">Table des Matières</h2>
<div id="sommaire">

</div>
{% endblock %}
{% block menuprincipale %}
    {% include ':default:menu.project2.twig' %}
{% endblock %}
{% block menusecondaire %}
    {% endblock %}
