{% extends 'base.html.twig' %}
    {% block dahsbord%}
        {% include 'default/dashboard.utilisateur.html.twig' %}
    {% endblock %}
    {% block nav %}
        {% include 'default/nav.dashboard.html.twig' %}
    {% endblock %}
{% block body %}
<h2 class="sub-header">Liste de tous les projets du User</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Catégorie</th>
                <th>Statut</th>
                <th>Droit</th>
                <th>Crée le </th>
                <th>Modifié le </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.title }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.getCategory.name }}</td>
                <td>{{ project.getRights.type }}</td>
                <td>{% if project.statut %}Terminé {% else %}En cours {% endif %}</td>
                <td>{% if project.createdat %}{{ project.createdat|date('d/m/Y - H:i') }}{% endif %}</td>
                <td>{% if project.editedat %}{{ project.editedat|date('d/m/Y - H:i') }}{% endif %}</td>
                <td><a href="{{ path('project_show', { 'id': project.id }) }}">Voir</a> &nbsp;
                    <a href="{{ path('project_edit', { 'id': project.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
