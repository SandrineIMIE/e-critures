{% extends 'base.html.twig' %}
    {% block dahsbord %}
        {% include 'default/dashboard.utilisateur.html.twig' %}
    {% endblock %}
    {% block nav %}
        {% include 'default/nav.dashboard.html.twig' %}
    {% endblock %}
{% block body %}
    <h2 class="sub-header">Liste de mes projets</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Catégorie</th>
                <th>Statut</th>
                <th>Droit</th>
                <th>Crée le</th>
                <th>Modifié le</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ project.title }}</td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.getCategory.name }}</td>
                    <td>{{ project.getRights.type }}</td>
                    <td>{% if project.statut %}Terminé {% else %}En cours {% endif %}</td>
                    <td>{% if project.createdat %}{{ project.createdat|date('d/m/Y - H:i') }}{% endif %}</td>
                    <td>{% if project.editedat %}{{ project.editedat|date('d/m/Y - H:i') }}{% endif %}</td>
                    <td><a href="{{ path('project_show', { 'id': project.id }) }}" class="btn btn-info" role="button" title=" Modifier">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            <span class="hidden">Editer</span></a>
                        <a href="{{ path('project_delete', { 'id': project.id }) }}" class="btn btn-danger" title="Supprimer"
                           role="button">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            <span class="hidden">Supprimer</span></a>
                        <a href="{{ path('pdfproj',{ 'id': project.id }) }}" target="_blank" class="btn btn-info" role="button">
                            <span class="glyphicon glyphicon-export" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block menuprincipale %}
    {% include 'default/menu.html.twig' %}
{% endblock %}
{% block menusecondaire %}   {% endblock %}
