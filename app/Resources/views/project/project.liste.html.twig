{% extends 'base.html.twig' %}

{% block body %}
<h2 class="sub-header">Liste de tous les projets</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Statut</th>
            <th>Droit</th>
            <th>Statut</th>
            <th>Crée le </th>
            <th>Modifié le </th>
        </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.title }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.getCategory.name }}</td>
                <td>{{ project.getRights.type }}</td>
                <td>{% if project.statut %}Terminé {% else %}En cours {% endif %}</td>
                <td>{% if project.createdat %}{{ project.createdat|date('d/m/Y - H:i') }}{% endif %}</td>
                <td>{% if project.editedat %}{{ project.editedat|date('d/m/Y - H:i') }}{% endif %}</td>
                <td><a href="{{ path('project_show', { 'id': project.id }) }}">Voir</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block menuprincipale %}
    {% include ':default:menu.project.twig' %}
{% endblock %}
