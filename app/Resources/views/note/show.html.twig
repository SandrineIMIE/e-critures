{% extends 'base.html.twig' %}

{% block body %}

    <table>
        <tbody>
        <th><h1>{{ note.titre }}</h1></th>
        <td><a href="{{ path('note_edit', { 'id': note.id }) }}" class="btn btn-info"
                                                  role="button" title="Modifier"> <span class="glyphicon glyphicon-pencil"
                                                                                        aria-hidden="true"></span></a>
            {{ form_start(delete_form) }}
            <button type="submit" value="Supprimer" class="btn btn-danger" title="Supprimer">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
            {{ form_end(delete_form) }}
        </td>
        <tr>
            <th>Contenu</th>
            <td>{{ note.contenu }}</td>
        </tr>

        </tbody>
    </table>
{% endblock %}
