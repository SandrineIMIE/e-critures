{% extends 'popup.html.twig' %}
{% block body %}
    <h1>Note</h1>
    <table>
        <tbody>
        <th>{{ note.titre }}</th>
        <td><a href="{{ path('note_edit', { 'id': note.id }) }}" class="btn btn-info" role="button" title="Modifier">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            <a href="{{ path('note_delete', { 'id': note.id }) }}" class="btn btn-danger" role="button" title="Supprimer">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
        </td>
        <tr>
            <td colspan="2">{{ note.contenu }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
