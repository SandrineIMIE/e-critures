{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Notes</h1>
    <table>
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.titre }}</td>
                <td>
                    <a href="{{ path('note_show', { 'id': note.id }) }}" class="btn-primary" title="Voir" role="button">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <a href="{{ path('note_edit', { 'id': note.id }) }}" title="Modifier" class="btn-info" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ path('note_delete', { 'id': note.id }) }}" class="btn btn-danger" role="button" title="Supprimer">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
