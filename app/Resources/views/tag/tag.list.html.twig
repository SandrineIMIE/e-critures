{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des tags</h1>
    <table>
        <thead>
        <tr>
            <th>Nom du Tag</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('tag_edit', { 'id': tag.id }) }}" class="btn btn-info" role="button"
                       title=" Modifier">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ path('tag_delete', { 'id': tag.id }) }}" class="btn btn-danger" title="Supprimer" role="button">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
