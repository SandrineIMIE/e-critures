{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tag</h1>

    <table>
        <tbody>
            <tr>
                <th>{{ tag.name }}</th>

                <td><a href="{{ path('tag_edit', { 'id': tag.id }) }}" class="btn btn-info"
                       role="button" title="Modifier">  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    {{ form_start(delete_form) }}
                    <button type="submit" value="Supprimer" class="btn btn-danger" title="Supprimer">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                    {{ form_end(delete_form) }}
                </td>

            </tr>
        </tbody>
    </table>

{% endblock %}
