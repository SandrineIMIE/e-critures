{% extends 'popup.html.twig' %}

{% block body %}
    <table>
        <tbody>
            <tr>
                <th>{{ tag.name }}</th>
                <td>
                    <a href="{{ path('tag_edit', { 'id': tag.id }) }}" class="btn btn-info" role="button" title="Modifier">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ path('tag_delete', { 'id': tag.id }) }}" class="btn btn-danger" title="Supprimer" role="button">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
