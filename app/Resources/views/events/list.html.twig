{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des événements</h1>
    <table>
        <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>

                <td>{{ event.date }}</td>
                <td>{{ event.description }}</td>
                <td>
                    <a href="{{ path('events_show', { 'id': event.id }) }}" class="btn-primary" title="Voir" role="button">
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <a href="{{ path('events_edit', { 'id': event.id }) }}"title="Modifier" class="btn-info" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ path('events_delete', { 'id': event.id }) }}" class="btn btn-danger" role="button" title="Supprimer">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
